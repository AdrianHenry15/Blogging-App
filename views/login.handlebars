<span class="flex-row justify-space-between">
    <div class="col-12 col-md-4">

        <div class="card">
            <div class="card">
                <h3 class="card-header text-uppercase text-center">login</h3>
                <div class="card-body">
                    <form id="login-form" class="card=body">
                        <div>
                            <label class="card-header" for="email-login">Email:</label>
                            <input class="form-input" type="text" id="email-login" />
                        </div>
                        <div>
                            <label class="card-header" for="password-login">Password:</label>
                            <input class="form-input" type="password" id="password-login" />
                        </div>
                        <div>
                            <button class="btn" type="submit">login</button>
                        </div>
                    </form>
                </div>
                <h3 class="card-header text-uppercase">signup</h3>
                <div class="card-body">
                    <form id="signup-form" class="card=body">
                        <div>
                            <label class="card-header" for="username-signup">Username:</label>
                            <input class="form-input" type="text" id="username-signup" autofocus="true" />
                        </div>
                        <div>
                            <label class="card-header" for="email-signup">Email:</label>
                            <input class="form-input" type="text" id="email-signup" />
                        </div>
                        <div>
                            <label class="card-header" for="password-signup">Password:</label>
                            <input class="form-input" type="password" id="password-signup" />
                        </div>
                        <div>
                            <button class="btn" type="submit">signup</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</span>

<script src="/javascript/login.js"></script>